<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeremyliao.android.scaffold">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.ScaffoldApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:screenOrientation="portrait" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.normal.RecyclerViewNormalDemo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".recyclerview.quick.RecyclerViewQuickDemo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".databinding.activity.DataBindingDemoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".databinding.fragment.DataBindingFragmentDemo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".databinding.view.DemoInfoViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".broadcast.LocalBroadcastDemoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".recyclerview.loadmore.LoadMoreRecyclerDemo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".databinding.vmshare.ViewModelShareDemo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".design.DesignDemoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".robolectric.activity.UTMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".robolectric.activity.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".news.modules.home.NewsHomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".news.modules.detail.NewsDetailActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".broadcast.InterProcessService"
            android:process=":process">
            <intent-filter>
                <action android:name="intent.action.INTER_PROCESS" />
            </intent-filter>
        </service>
    </application>

</manifest>